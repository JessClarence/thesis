@using DomainLayer.Models;
@model AccountDetails
<partial name="_Notifications" />

@{
	string filename = ViewBag.FileName;
}

<link rel="stylesheet" href="~/css/delete.css" asp-append-version="true" />

<section id="content">


	<!-- MAIN STARTS-->
	<main class="registration">
		<div class="container">
			<header>Delete User</header>

			<form asp-action="Delete" class="form">
				<div class="column">
					<div class="input-box">
						<label>First Name</label>
						<input type="text" placeholder="@Model.firstName" disabled />
					</div>
					<div class="input-box">
						<label>Middle Name</label>
						<input type="text" placeholder="@Model.middleName" disabled />
					</div>
					<div class="input-box">
						<label>Last Name</label>
						<input type="text" placeholder="@Model.lastName" disabled />
					</div>
				</div>

				<div class="input-box address">
					<div class="input-box">
						<label>Address</label>
						<input type="text" placeholder="@Model.address" disabled />
					</div>
				</div>

				<div class="column">
					<div class="row">
						<div class="input-box">
							<label>Phone Number</label>
							<input type="number" placeholder="@Model.contactNo" disabled />
						</div>
						<div class="input-box">
							<label>Birth Date</label>
							<input type="date" placeholder="@Model.birthdate" disabled />
						</div>

						@* <div class="input-box roles">
							<label>Role</label>
							<input type="text" placeholder="@Model.Roles" disabled />
						</div> *@
						<div class="input-box roles">
							<label>Sex</label>
							<input type="text" placeholder="@Model.sex" disabled />
						</div>
						<div class="input-box">
							<label>Email</label>
							<input type="email" placeholder="@Model.Email" class="text" disabled />
						</div>
					</div>
					<div class="row">
						<div class="upload-box">
							<label>Profile Picture</label>
							<div class="container">
								<img src="~/img/uploaded/@filename" alt="Adrianne" class="img-area" style="height: 300px;">
							</div>
						</div>
					</div>
				</div>
				<div class="column">
					<button style="background-color:grey; " asp-action="Index">
						Go back to the previous page
					</button>
					@*<button style="background-color: red;">Confirm Delete</button>*@
					<input type="hidden" asp-for="Id" />
					<button type="submit" value="Delete" style="background-color: red;">Confirm Delete</button>
				</div>
			</form>
		</div>


	</main>
	<!-- MAIN ENDS -->

</section>