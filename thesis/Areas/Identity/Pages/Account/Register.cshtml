@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@if (!User.Identity.IsAuthenticated)
{
<h1>@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>Create a new account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <select asp-for="Input.Roles">
                    @if (!User.IsInRole("SuperAdministrator"))
                    {
                        <option>SUPERADMIN</option>
                        <option>INSPECTORADMIN</option>
                        <option>MTVADMIN</option>
                    }
                    @if (!User.IsInRole("InspectorAdministrator"))
                    {
                        <option>MEATESTABLISHMENTREPRESENTATIVE</option>
                        <option>MEATINSPECTOR</option>
                    }
                    @if (!User.IsInRole("MTVAdministrator"))
                    {
                        <option>MTVINSPECTOR</option>
                        <option>MTVUSERS</option>
                    }
                
                </select>
                <div class="form-floating">
                    <input asp-for="Input.firstName" class="form-control" autocomplete="firstname" aria-required="true" />
                    <label asp-for="Input.firstName"></label>
                    <span asp-validation-for="Input.firstName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.lastName" class="form-control" autocomplete="lastname" aria-required="true" />
                    <label asp-for="Input.lastName"></label>
                    <span asp-validation-for="Input.lastName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.middleName" class="form-control" autocomplete="middlename" aria-required="true" />
                    <label asp-for="Input.middleName"></label>
                    <span asp-validation-for="Input.middleName" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.address" class="form-control" autocomplete="address" aria-required="true" />
                    <label asp-for="Input.address"></label>
                    <span asp-validation-for="Input.address" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.contactNo" class="form-control" autocomplete="contactno" aria-required="true" />
                    <label asp-for="Input.contactNo"></label>
                    <span asp-validation-for="Input.contactNo" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.image" class="form-control" autocomplete="image" aria-required="true" />
                    <label asp-for="Input.image"></label>
                    <span asp-validation-for="Input.image" class="text-danger"></span>
                </div>
                @if (User.IsInRole("InspectorAdministrator"))
                {
                    @*meatestablishment*@
                    <select asp-for="Input.MeatEstablishment.Type">
                        <option>SLH</option>
                        <option>PDP</option>
                        <option>MCP</option>
                        <option>CSW</option>
                    </select>
                    <div class="form-floating">
                        <input asp-for="Input.MeatEstablishment.Name" class="form-control" autocomplete="image" aria-required="true" />
                        <label asp-for="Input.MeatEstablishment.Name"></label>
                        <span asp-validation-for="Input.MeatEstablishment.Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.MeatEstablishment.Address" class="form-control" autocomplete="image" aria-required="true" />
                        <label asp-for="Input.MeatEstablishment.Address"></label>
                        <span asp-validation-for="Input.MeatEstablishment.Address" class="text-danger"></span>
                    </div>
                    <div class="form-floating">
                        <input asp-for="Input.MeatEstablishment.LicenseToOperateNumber" class="form-control" autocomplete="image" aria-required="true" />
                        <label asp-for="Input.MeatEstablishment.LicenseToOperateNumber"></label>
                        <span asp-validation-for="Input.MeatEstablishment.LicenseToOperateNumber" class="text-danger"></span>
                    </div>
                    @*end*@
                }else{
                    <select asp-for="Input.MeatEstablishment.Type" hidden>
                        <option>SLH</option>
                        <option>PDP</option>
                        <option>MCP</option>
                        <option>CSW</option>
                    </select>
                }

                <div class="form-floating">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
            </form>
        </div>
    
    </div>
}
else
{
    <div>
        <h1>Page Not Available</h1>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
