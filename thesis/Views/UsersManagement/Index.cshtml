@using thesis.Areas.Identity.Data;
@model IEnumerable<AccountDetails>
<link rel="stylesheet" href="~/css/users.css" asp-append-version="true" />


@if (User.IsInRole("SuperAdministrator"))
{
	<section id="content">


		<!-- MAIN STARTS-->
		<main class="registration">
			<div class="head-title">
				<div class="left">
					<h1>Users Management</h1>
				</div>
			</div>
				
			<div class="table-container">
				<div style="margin-bottom: 25px;">
					<a asp-area="Identity" asp-page="/Account/Register" class="createBtn">
						<i class="bi bi-plus-circle me-1"></i> Add Account
					</a>
				</div>
				<table id="admin-accounts" class="table table-striped" style="width:100%">
					<thead>
						<tr>
							<th>Name</th>
							<th>Role</th>
							<th>Email</th>
							<th>Phone Number</th>
							<th>Address</th>
							<th style="">Options</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.lastName, @item.firstName</td>
								<td>@item.Roles</td>
								<td>@item.Email</td>
								<td>@item.contactNo</td>
								<td>@item.address</td>
								<td class="d-flex flex-nowrap">
									<a type="button" class="btn btn-primary py-1 font-weight-light" asp-action="Details" asp-route-id="@item.Id">View</a>
									<a type="button" class="btn btn-warning  mx-1 py-1 font-weight-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
									<a type="button" class="btn btn-danger py-1 font-weight-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
								</td>
							</tr>
						}

					</tbody>

				</table>
			</div>


		</main>
		<!-- MAIN ENDS -->

	</section>
}

@if (User.IsInRole("InspectorAdministrator"))
{
	<section id="content">


		<!-- MAIN STARTS-->
		<main class="registration">
			<div class="head-title">
				<div class="left">
					<h1>Users Management</h1>
				</div>
			</div>
			<div class="table-container">
				<table id="admin-accounts" class="table table-striped" style="width:100%">
					<thead>
						<tr>
							<th>Name</th>
							<th>Role</th>
							<th>Meat Establishment</th>
							<th>Email</th>
							<th>Phone Number</th>
							<th>Address</th>
							<th style="">Options</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							if (item.Roles.ToString() == "MEATINSPECTOR" || item.Roles.ToString() == "MEATESTABLISHMENTREPRESENTATIVE")
							{
								<tr>
									<td>@item.lastName, @item.firstName</td>
									<td>@item.Roles</td>
									<td>@item.MeatEstablishmentId</td>
									<td>@item.Email</td>
									<td>@item.contactNo</td>
									<td>@item.address</td>
									<td class="d-flex flex-nowrap">
										<a type="button" class="btn btn-primary py-1 font-weight-light" asp-action="Details" asp-route-id="@item.Id">View</a>
										<a type="button" class="btn btn-warning mx-1 py-1 font-weight-light" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
										<a type="button" class="btn btn-danger py-1 font-weight-light" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
									</td>
								</tr>
							}
						}
					</tbody>

				</table>
			</div>


		</main>
		<!-- MAIN ENDS -->

	</section>
}

<!-- CONTENT ENDS-->


<script src="~/js/users.js" asp-append-version="true"></script>