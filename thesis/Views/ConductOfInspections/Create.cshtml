        <div class="registration">

            <div class="container">

                @*<h1>Create</h1>*@
                <div class="column">
                    <div class="input-box">
                        <a class='bx bxs-chevron-left' asp-controller="ReceivingReports" asp-action="Index">
                            <span>Back</span>
                        </a>
                        <a class='bx bxs-chevron-left' asp-action="Index">
                            <span>Show All</span>

                        </a>


                    </div>
                    <br />
                    <form class="form" asp-action="Create">
                        <div class="column">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="input-box">

                                <label asp-for="Issue" class="control-label"></label>
                                <br />
                                <select asp-for="Issue" class="form-control" asp-items="@Html.GetEnumSelectList<Issue>()">
                                    <option>--Select--</option>
                                </select>
                                <span asp-validation-for="Issue" class="text-danger"></span>
                            </div>
                            <div class="input-box">
                                <label asp-for="NoOfHeads" class="control-label"></label>
                                <input asp-for="NoOfHeads" class="form-control" />
                                <span asp-validation-for="NoOfHeads" class="text-danger"></span>
                            </div>
                            <div class="input-box">
                                <label asp-for="Weight" class="control-label"></label>
                                <input asp-for="Weight" class="form-control" />
                                <span asp-validation-for="Weight" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="column">
                            <div class="input-box">
                                <label asp-for="Cause" class="control-label"></label>
                                <select asp-for="Cause" class="form-control" asp-items="@Html.GetEnumSelectList<Cause>()">
                                    <option>--Select--</option>
                                </select>
                                <span asp-validation-for="Cause" class="text-danger"></span>
                            </div>
                            @*style="display:none"*@
                            <div class="input-box" >
                                <label asp-for="MeatInspectionReportsId" class="control-label"></label>
                                <select asp-for="MeatInspectionReportsId" class="form-control" asp-items="ViewBag.MeatInspectionReportsId">
                                    <option value="">-- Select Meat Inspection Report --</option>
                                    @{
                                        var meatInspectionReportsId = (IEnumerable<SelectListItem>)ViewBag.MeatInspectionReportsId;
                                        foreach (var item in meatInspectionReportsId)
                                        {
                                            var isSelected = item.Value == meatInspectionReportId.ToString() ? "selected" : "";
                                            <option value="@item.Value" selected="@isSelected">@item.Text</option>
                                        }
                                    }
                                </select>
                            </div>

                        </div>
                        <br />

                        @* <input type="submit" value="Create" class="btn btn-primary" />*@


                        <button type="submit" value="Create">Create</button>

                    </form>
