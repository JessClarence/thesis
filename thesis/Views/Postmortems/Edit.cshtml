@model thesis.Models.Postmortem
<link href="~/css/inspectorSideNav.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Postmortem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PassedForSlaughterId" class="control-label"></label>
                <select asp-for="PassedForSlaughterId" class="form-control" asp-items="ViewBag.PassedForSlaughterId"></select>
                <span asp-validation-for="PassedForSlaughterId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalPart" class="control-label"></label>
                <select asp-for="AnimalPart" class="form-control"></select>
                <span asp-validation-for="AnimalPart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cause" class="control-label"></label>
                <select asp-for="Cause" class="form-control"></select>
                <span asp-validation-for="Cause" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NoOfHeads" class="control-label"></label>
                <input asp-for="NoOfHeads" class="form-control" />
                <span asp-validation-for="NoOfHeads" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Images" class="control-label"></label>
                <input asp-for="Images" class="form-control" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}