@model IEnumerable<thesis.Models.Postmortem>
<link href="~/css/inspectorsidenav.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Index";
}
<section id="content">


    <!-- MAIN STARTS-->
    <main>
        <div class="FirstLayer">
            <h1>Conduct of Postmortem Inspection</h1>
        </div>
        <div class="FirstLayer">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">II</li>
                </ol>
            </nav>
        </div>

        <div class="FirstLayer">

            <div class="applications">
                <h1>Postmortem Inspection</h1>


                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Passed for Slaughters No. Of Heads
                            </th>
                            <th>
                                Passed for Slaughters Weight
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AnimalPart)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cause)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Weight)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NoOfHeads)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image1)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image2)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Image3)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PassedForSlaughter.NoOfHeads)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PassedForSlaughter.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AnimalPart)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cause)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Weight)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfHeads)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image1)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image2)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Image3)
                                </td>
                                <td>
                                    @if (User.IsInRole("MeatInspector"))
                                    {
                                        <div class="btn-group">
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <a asp-controller="MeatInspectionReports" asp-action="Index"> Back to List </a>
            </div>

        </div>
    </main>
</section>