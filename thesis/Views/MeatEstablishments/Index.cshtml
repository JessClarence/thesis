@using thesis.Data.Enum;
@model IEnumerable<thesis.Models.MeatEstablishment>

@{
    ViewData["Title"] = "Index";
}
<section id="content">
    <link href="~/css/inspectorsidenav.css" rel="stylesheet" />

    <!-- MAIN STARTS-->
    <main>
        <div class="FirstLayer">
            <h3>List of Meat Establishment</h3>
        </div>
        <div class="FirstLayer">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">List of Meat Establishment</li>
                </ol>
            </nav>
        </div>

        <div class="FirstLayer">

            <div class="applications">

                <p>
                    <a asp-action="Create">Create New</a>
                </p>
                <br />
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Establishment Type
                            </th>
                            <th>
                                Establishment Name
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Address)
                            </th>
                            <th>
                                License Status
                            </th>
                            <th>
                                LTO No.
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            @if (item.Type != null && item.Name != null && item.Address != null && item.LicenseToOperateNumber != null)
                            {
                                <tr class="filter-item">
                                    @* <td>
                            @Html.DisplayFor(modelItem => item.Type)
                            </td>*@
                                    <td>
                                        @if (item.Type == EstablishmentType.SLH)
                                        {
                                            @Html.Raw("Slaughter House")
                                        }
                                        else if (item.Type == EstablishmentType.PDP)
                                        {
                                            @Html.Raw("Poultry Dressing Plant")
                                        }
                                        else if (item.Type == EstablishmentType.MCP)
                                        {
                                            @Html.Raw("Meat Cutting Plant")
                                        }
                                        else if (item.Type == EstablishmentType.CSW)
                                        {
                                            @Html.Raw("Cold Storage Warehouse")
                                        }
                                        else
                                        {
                                            @Html.DisplayFor(modelItem => item.Type)
                                        }
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Address)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseStatus)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.LicenseToOperateNumber)
                                    </td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </main>
</section>
