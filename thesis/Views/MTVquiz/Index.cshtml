				q9: 'd',
				q10: 'a',
				q11: 'b',
				q12: 'c',
				q13: 'd',
				q14: 'a',
				q15: 'b',
				q16: 'c'
			};

			// Get the form elements
			const form = document.getElementById('quiz-form');
			const elements = form.elements;

			// Initialize the score
			let score = 0;

			// Loop through the form elements and check the selected answers
			for (let i = 0; i < elements.length; i++) {
				const element = elements[i];
				if (element.type === 'radio' && element.checked) {
					const questionNumber = element.name;
					const selectedAnswer = element.value;

					// Check if the selected answer is correct
					if (correctAnswers[questionNumber] === selectedAnswer) {
						score++;
					}
				}
			}

			// Display the score or do whatever you want with it
			alert(`Your score is: ${score}`);

			// Save the answers to local storage
			const answers = {};
			for (let i = 0; i < elements.length; i++) {
				const element = elements[i];
				if (element.type === 'radio' && element.checked) {
					const questionNumber = element.name;
					const selectedAnswer = element.value;
					answers[questionNumber] = selectedAnswer;
				} else if (element.type === 'text') {
					const questionNumber = element.id;
					const answer = element.value;
					answers[questionNumber] = answer;
				}
			}
			localStorage.setItem('quizAnswers', JSON.stringify(answers));
		});

		// Optionally, you can retrieve the stored answers when the page loads
		window.addEventListener('load', function () {
			const storedAnswers = localStorage.getItem('quizAnswers');
			if (storedAnswers) {
				const answers = JSON.parse(storedAnswers);
				// Here, you can populate the form with the stored answers
				document.getElementById('pn').value = answers['pn'];
				// For radio buttons, you can use the answers object to check the correct options.
